@page
@model LaborVolumeCalculator.Pages.Labors.IndexModel

@{
    string title = Html.DisplayGroupNameFor(model => model.Labors[0]);

    ViewData["Title"] = title;
}

<h1>@title</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Labors[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Labors[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Labors[0].LaborGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Labors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaborGroup.Code)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Открыть</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
