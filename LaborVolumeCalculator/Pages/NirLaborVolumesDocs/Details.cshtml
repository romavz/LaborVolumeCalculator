</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.NirLaborVolumesDoc.ID">Изменить</a> |
    <a asp-page="./Index">Вернуться к списку</a> |
    <a asp-page="../NirLaborVolumesDocRecords/Create" asp-route-docId="@Model.NirLaborVolumesDoc.ID"> Добавить трудозатраты </a>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NirLaborVolumesDocRecords[0].Labor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NirLaborVolumesDocRecords[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NirLaborVolumesDocRecords[0].Calculation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NirLaborVolumesDocRecords)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Labor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calculation)
                </td>
                <td>
                    <a asp-page="../NirLaborVolumesDocRecords/Edit" asp-route-id="@item.ID">Изменить</a> |
                    <a asp-page="../NirLaborVolumesDocRecords/Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
