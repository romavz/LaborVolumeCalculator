        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NirLaborVolumesDoc.IsImplemented)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NirLaborVolumesDoc.IsImplemented)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NirLaborVolumesDoc.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NirLaborVolumesDoc.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NirLaborVolumesDoc.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NirLaborVolumesDoc.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NirLaborVolumesDoc.Nir)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NirLaborVolumesDoc.Nir.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NirLaborVolumesDoc.NiokrStage)
