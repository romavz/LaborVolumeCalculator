@{
    ViewData["Title"] = "Свойства новизны НИР";
}

<h1>Свойства новизны НИР</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NirInnovationProperty[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NirInnovationProperty[0].CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NirInnovationProperty[0].UpdateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
