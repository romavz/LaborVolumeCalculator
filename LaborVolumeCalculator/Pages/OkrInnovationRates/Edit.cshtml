@page
@model LaborVolumeCalculator.Pages.OkrInnovationRates.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4> @Html.DisplayNameFor(model => model.OkrInnovationRate)</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OkrInnovationRate.OkrInnovationProperty)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OkrInnovationRate.OkrInnovationProperty.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OkrInnovationRate.DeviceComposition)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OkrInnovationRate.DeviceComposition.Name)
    </dd>
</dl>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OkrInnovationRate.OkrInnovationPropertyID" />
            <input type="hidden" asp-for="OkrInnovationRate.DeviceCompositionID" />
            <div class="form-group">
                <label asp-for="OkrInnovationRate.Value" class="control-label"></label>
                <input asp-for="OkrInnovationRate.Value" class="form-control" />
                <span asp-validation-for="OkrInnovationRate.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
