<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Калькулятор трудозатрат</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid pl-0">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Калькулятор Трудозатрат</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/About">О проекте</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 flex-shrink-1 d-flex">
        <div class="container-fluid px-0">
            <div class="row">
                <div class="col-auto">
                    <div class="card mb-3" style="width: 18rem;">
                        <div class="card-header"> НИР </div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Nirs/Index">НИРы</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/NirInnovationProperties/Index">Свойства новизны НИР</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/NirInnovationRates/Index">Коэффициенты новизны НИР</a>
                            </li>
                        </ul>
                    </div>

                    <div class="card mb-3" style="width: 18rem;">
                        <div class="card-header"> ОКР </div>
                        <nav class="nav flex-column">
                            <a class="nav-link" asp-area="" asp-page="/OkrInnovationProperties/Index">Свойства новизны ОКР</a>
                            <a class="nav-link" asp-area="" asp-page="/OkrInnovationRates/Index">Коэффициенты новизны ОКР</a>
                            <a class="nav-link" asp-area="" asp-page="/DeviceCompositions/Index">Компоновки устройств</a>
                            <a class="nav-link" asp-area="" asp-page="/DeviceCountRanges/Index">Количественные диапазоны</a>
                            <a class="nav-link" asp-area="" asp-page="/DeviceComplexityRates/Index">Коэффициенты сложности устройств</a>
                        </nav>
                    </div>
                </div>
                <div class="col">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    @*<main class="content-wrapper pb-3">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>*@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Калькулятор Трудозатрат - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
