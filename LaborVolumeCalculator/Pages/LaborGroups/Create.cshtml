@page
@model LaborVolumeCalculator.Pages.LaborGroups.CreateModel

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>@Html.DisplayNameFor(model => model.LaborGroup)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LaborGroup.ParentGroup" class="control-label"></label>
                <div>
                    <input asp-for="LaborGroup.ParentGroupId" class="form-control" hidden value="@Model.ParentGroup?.ID" />
                    @{ LaborVolumeCalculator.Models.LaborGroup parentGroup = Model.ParentGroup; }
                    <a asp-page="./Index" asp-route-parentGroupId="@parentGroup?.ID">@(parentGroup != null ? String.Format("{0} {1}", parentGroup.Code, parentGroup.Name) : "\\ . .")</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LaborGroup.Code" class="control-label"></label>
                <input asp-for="LaborGroup.Code" class="form-control" />
                <span asp-validation-for="LaborGroup.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborGroup.Name" class="control-label"></label>
                <input asp-for="LaborGroup.Name" class="form-control" />
                <span asp-validation-for="LaborGroup.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-parentGroupId="@Model.ParentGroup?.ID">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
